{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "mainIp": {
            "metadata": {
                "description": "Name of the Main IP"
            },
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('mainIp')]",
            "type": "Microsoft.Network/publicIPAddresses",
            "apiVersion": "2018-08-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "sku": {
                "name": "Basic"
            },
            "properties": {
                "publicIPAllocationMethod": "Static",
                "publicIPAddressVersion": "IPv4",
                "dnsSettings": {
                    "domainNameLabel": "[parameters('mainIp')]"
                },
                "ipTags": []
            },
            "zones": []
        }
    ],
    "outputs": {
        "ipAddress": {
            "type": "string",
            "value": "[reference(parameters('mainIp')).ipAddress]"
        }
    }
}