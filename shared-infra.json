{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "routeTableId": {
            "metadata": {
                "description": "Route Table ID, if it exists"
            },
            "type": "string"
        },
        "vault-id": {
            "metadata": {
                "description": "Resource ID of the Azure Vault"
            },
            "type": "string"
        },
        "environment": {
            "metadata": {
                "description": "Deployment environment ; used in the vault's secret names"
            },
            "type": "string"
        }
    },
    "variables": {
        "Template URL Prefix": "https://github.com/vplauzon/shared-infra/raw/master/",
        "AKS Cluster Template URL": "[concat(variables('Template URL Prefix'), 'cluster.json')]",
        "Cluster Deployment Name":"[concat('Cluster-', guid(deployment().name))]"
    },
    "resources": [
        {
            "name": "[variables('Cluster Deployment Name')]",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2018-05-01",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('AKS Cluster Template URL')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "Route Table Id": {
                        "value": "[parameters('routeTableId')]"
                    },
                    "ssh Public Key": {
                        "reference": {
                            "keyVault": {
                                "id": "[parameters('vault-id')]"
                            },
                            "secretName": "[concat(parameters('environment'),'-shared-infra-ssh-public-key')]"
                        }
                    },
                    "Cluster Name": {
                        "value": "[concat('cluster-', parameters('environment'))]"
                    },
                    "DNS Prefix": {
                        "reference": {
                            "keyVault": {
                                "id": "[parameters('vault-id')]"
                            },
                            "secretName": "[concat(parameters('environment'),'-shared-infra-dns-prefix')]"
                        }
                    },
                    "Service Principal App ID": {
                        "reference": {
                            "keyVault": {
                                "id": "[parameters('vault-id')]"
                            },
                            "secretName": "[concat(parameters('environment'),'-shared-infra-app-id')]"
                        }
                    },
                    "Service Principal Object ID": {
                        "reference": {
                            "keyVault": {
                                "id": "[parameters('vault-id')]"
                            },
                            "secretName": "[concat(parameters('environment'),'-shared-infra-object-id')]"
                        }
                    },
                    "Service Principal Secret": {
                        "reference": {
                            "keyVault": {
                                "id": "[parameters('vault-id')]"
                            },
                            "secretName": "[concat(parameters('environment'),'-shared-infra-password')]"
                        }
                    }
                }
            }
        },
        {
            "name": "[concat('central-insight-', parameters('environment'))]",
            "type": "microsoft.insights/components",
            "apiVersion": "2015-05-01",
            "location": "[resourceGroup().location]",
            "tags": {},
            "kind": "web",
            "tags": {},
            "properties": {
                "Application_Type": "web"
            },
            "dependsOn": []
        }
    ],
    "outputs": {
        "nodeResourceGroup": {
            "type": "string",
            "value": "[reference(variables('Cluster Deployment Name')).outputs.nodeResourceGroup.value]"
        }
    }
}